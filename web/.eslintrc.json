
{
    "parser": "babel-eslint",
    "ecmaFeatures": {
        "jsx": true,
        "modules": true
    },
    "env": {
        "browser": true,
        "es6": true
    }, 
    "extends": [
        "airbnb-base",
        "eslint:recommended",
        "prettier"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "warn",
        "quotes": [
            "error",
            "single"
        ],
        /*eslint class-methods-use-this: ["error", { "exceptMethods": ["foo"] }] */
        "class-methods-use-this": "off"
    },
      
    
}